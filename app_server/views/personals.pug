html 
  head 
    title Personals
    style. 
      *{
        margin: 0;
        padding: 0;
      }
      h1 {
        text-align: center;
        color: thick-brown;
        font-size: 30px;
      }
      div{
        font-size: 20px;
      }
      body{
        background-position: center;
        background-height: 80px 100px;
        background-repeat: no-repeat;
        background-size: 100% 100%;
      }
      .navbar{
        
        gap: 20px;
        margin-left: 300px;
      }
      a{  
        padding: 5px;
        margin: 15px 0 15px 10px;
        color:navy;
        text-decoration: none;
      }
      .navbarsec{
        align-items: center;
        padding: 0 0 0 10%;
        display:flex;
        opacity: 0.6;
        background-color: lightgrey;
        padding:20px;
      }
      
      .imgcontainer{
        display:flex;
      }
      img {
          margin:20px;
          width:250px;
          height:300px;
      }
      .imgcontainerchild{
          width:350px;
          margin:20px;
      }
      .flexdiv{
        display:flex;
      }
      p{
        font-size:15px;
      }
  body 
    section.navbarsec
      h1 #{title}
      div.navbar
        a(href='/personals') Personals
        a(href='/ayurvedics') ayurvedics
        a(href='/foods') foods
        a(href='/accesories') accesories
   
    h1 personal care
      section.flexdiv
        div.imgcontainer
            div.imgcontainerchild
                img(src=personalsdata[0].image)
                h2 #{personalsdata[0].name}
                p #{personalsdata[0].description}                
                br
                span #{personalsdata[0].price} ₹
