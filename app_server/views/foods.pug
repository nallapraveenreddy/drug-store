html 
  head 
    title #{title}
    style. 
      *{
        margin: 0;
        padding: 0;
      }
      h1 {
        text-align: center;
        color: thick-brown;
        font-size: 30px;
      }
      div{
        font-size: 20px;
      }
      body{
        background-position: center;
        background-height: 80px 100px;
        background-repeat: no-repeat;
        background-size: 100% 100%;
      }
      .navbar{
        
        gap: 20px;
        margin-left: 300px;
      }
      a{  
        padding: 5px;
        margin: 15px 0 15px 10px;
        color:navy;
        text-decoration: none;
      }
      .navbarsec{
        align-items: center;
        padding: 0 0 0 10%;
        display:flex;
        opacity: 0.6;
        background-color: lightgrey;
        padding:20px;
      }
      .back{
        
        padding :20px;
        margin-left : 20px;
        font-size: 40px;
        color: red;
      }
      img{
        width:250px;
      }
      .flexdiv{
        display:flex;
      }


